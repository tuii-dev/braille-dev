{
  "$schema": "https://turbo.build/schema.v1.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "inputs": ["src/**", "apps/**", "libs/**"]
    },
    "db:reset": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:deploy": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "dev": {
      "outputs": ["dist/**"],
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false
    },
    "copyfiles": {
      "dependsOn": ["^dev"],
      "inputs": ["**/*.yaml"],
      "outputs": ["dist/**"],
      "cache": false
    }
  },
  "globalDependencies": ["package.json", "yarn.lock", "turbo.json"]
}
